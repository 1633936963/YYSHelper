<Window x:Class="yys_yuhun10_.FloatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:yys_yuhun10_"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Title="FloatWindow"
        ShowActivated="False"
        Topmost="True"
        BorderThickness="1"
        Background="Transparent"
        Height="60" 
        Opacity="0.9"
        Width="70" MouseLeftButtonDown="Window_MouseLeftButtonDown" Closing="Window_Closing">
    <Border CornerRadius="30"
            x:Name="back"
            Background="#7F000000">
        <Grid>
            <TextBlock Text="准" Foreground="White"
                       x:Name="text"
                       HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
        </Grid>
    </Border>
</Window>
